<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_padding"
    tools:context=".AddFoodProductActivity">

    <EditText
        android:id="@+id/addFoodProductNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="put food product name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/save_button_left_margin"
        android:layout_marginTop="@dimen/save_button_top_margin"
        android:text="save"
        app:layout_constraintLeft_toRightOf="@id/deleteButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addFoodProductNameEditText" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/delete_button_right_margin"
        android:text="delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/saveButton"
        app:layout_constraintTop_toTopOf="@id/saveButton" />

</androidx.constraintlayout.widget.ConstraintLayout>